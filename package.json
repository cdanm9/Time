{
  "name": "timecap",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2.3.4",
    "@sap/cds": "^9.4.4",
    "@sap/xssec": "^4.11.1"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2.0.4",
    "@sap/cds-dk": "^9.4.3",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.34",
    "rimraf": "^5.0.10"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-capsuleapp": "cds watch --open com.sap.capsuleapp/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy timecap --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "server": {
      "index": true
    },
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "connectivity": true,
      "destinations": true,
      "html5-repo": true
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/capsuleapp"
  ]
}
